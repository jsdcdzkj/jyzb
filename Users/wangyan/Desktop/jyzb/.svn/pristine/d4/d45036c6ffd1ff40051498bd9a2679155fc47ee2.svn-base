@import "./variables.scss";
@import "./mixin.scss";
@import "./transition.scss";
@import "./element-ui.scss";
@import "./sidebar.scss";
@font-face {
  font-family: "youshebiaotihei";
  src: url(../fonts/YouSheBiaoTiHei.ttf);
}
body {
  height: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  font-family: "PingFang SC", Avenir, "Segoe UI", "Hiragino Sans GB", STHeiti,
    "Microsoft Sans Serif", "WenQuanYi Micro Hei", sans-serif;
}
ul,
li {
  margin: 0px;
  padding: 0px;
  list-style: none;
}
.ysfont {
  font-family: youshebiaotihei;
}
.mar {
  margin-top: 10px;
}
.mar2 {
  margin-top: 20px;
}
.marright30 {
  margin-right: 30px;
}
.marright10 {
  margin-right: 10px;
}
.marleft10 {
  margin-left: 10px;
}
.mt10 {
  margin-top: 10px;
}
.mt15 {
  margin-top: 15px;
}
.mt20 {
  margin-top: 20px;
}
.el-select {
  width: 100% !important;
}
input[type="number"]::-webkit-outer-spin-button,
input[type="number"]::-webkit-inner-spin-button {
  -webkit-appearance: none;
  margin: 0;
}

/* Firefox */
input[type="number"] {
  -moz-appearance: textfield;
}
.dialogForm {
  .el-form-item {
    margin-bottom: 0px;
  }
}

label {
  font-weight: 400;
}
.l {
  float: left;
}
.r {
  float: right;
}
.over {
  overflow: hidden;
}
html {
  height: 100%;
  box-sizing: border-box;
}

#app {
  height: 100%;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

a:focus,
a:active {
  outline: none;
}

a,
a:focus,
a:hover {
  cursor: pointer;
  color: inherit;
  text-decoration: none;
}

div:focus {
  outline: none;
}

.clearfix {
  &:after {
    visibility: hidden;
    display: block;
    font-size: 0;
    content: " ";
    clear: both;
    height: 0;
  }
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}
//公共样式
//按钮样式重置
.el-button--primary {
  color: #fff;
  background-color: #5a6fc0;
  border-color: #5a6fc0;
}
.el-button--success {
  color: #fff;
  background-color: #59a076;
  border-color: #59a076;
}
.el-button--mini {
  padding: 4px 9px;
  font-size: 12px;
  border-radius: 4px;
}

//表格样式重置
.el-table--border {
  border-bottom: 1px solid #ebeef5 !important;
}
.el-table {
  th {
    background: #f8f8f8 !important;
    padding: 5px 5px !important;
    .cell {
      font-weight: bold;
      color: #333;
    }
  }
  td {
    padding: 0px 0 !important;
    height: 32px !important;
    overflow: hidden;
  }
}
.el-table::before {
  content: none;
}
.el-table__fixed::before {
  content: none;
}
.el-table__fixed-right::before {
  content: none;
}

// 弹窗样式重置
.el-dialog {
  max-width: 600px;
  padding: 0px;
}
.el-dialog__header {
  padding: 15px !important;
}
.el-dialog__title {
  font-size: 16px;
}
.el-dialog__body {
  border-top: 1px solid #dcdfe6;
  padding: 20px;
}

// 抽屉弹窗样式重置

// 详情标题
.view-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 0 10px;
  position: relative;
  margin-left: 18px;

  &::before {
    content: "";
    position: absolute;
    left: -18px;
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #244895;
    box-shadow: 0 0 5px rgba($color: #244895, $alpha: 0.5);
  }
  h4 {
    padding: 0;
    margin: 0;
    font-size: 14px;
    font-weight: 700;
    width: 140px;
    color: #333;
  }
}
.el-drawer {
  overflow-y: auto !important;
}
.el-drawer__header {
  padding: 10px !important;
  margin-bottom: 14px;
  border-bottom: 1px solid #d1d9e1 !important;

  .drawer-title {
    font-size: 16px;
    line-height: 16px;
    color: rgb(40, 53, 95);
    display: flex;
    align-items: center;
    position: relative;
    //&::before {
    //  content: "";
    //  position: absolute;
    //  left: -10px;
    //  width: 4px;
    //  height: 45px;
    //  background: #537cdb;
    //}
    b {
      display: block;
      font-size: 16px;
      line-height: 16px;
      margin-top: 2px;
      margin-right: 4px;
      font-weight: normal;
      margin-left: 8px;
    }
  }
}
.drawer-content {
  padding: 0 20px 90px;
}

.footer-btn {
  padding: 12px 20px;
  border-top: 1px solid #efefef;
  position: fixed;
  right: 0;
  bottom: 0;
  text-align: right;
  width: $drawWidth;
  background-color: #fff;
  box-sizing: border-box;
  z-index: 999999;
}

//公共样式结束

.app-main {
  display: flex;
  flex-direction: column;
  overflow: hidden;

  .w-200 {
    width: 200px;
  }

  .app-container {
    padding: 0px;
    background: transparent;
    overflow: hidden;
    border-radius: 4px;
    height: calc(100vh - 60px);
    display: flex;
    flex-direction: column;

    .filter-container {
      padding-bottom: 10px;

      .filter-item {
        display: inline-flex;
        vertical-align: middle;
        margin-bottom: 10px;

        + .filter-item {
          margin-left: 10px;
        }
      }
    }

    .table-container {
      width: 100%;
    }

    .el-input-number--small {
      width: 180px;
    }

    .form-container {
      width: 100%;
      height: calc(100vh - 60px - 80px);
      display: flex;
      flex-direction: column;

      .form-container-header {
        height: 40px;
        line-height: 40px;
        background: #ffffff;
      }

      .form-container-body {
        flex: 1;
        overflow: auto;
      }
      .form-container-footer {
        height: 40px;
        line-height: 40px;
        background: #ffffff;
      }
    }
  }
  .topsearch {
    .el-form-item {
      margin-bottom: 10px;
    }
  }
  .topsearchTitle {
    font-size: 18px;
    font-weight: bold;
    height: 30px;
    line-height: 30px;
    margin-bottom: 15px;
    .topsearchIcon {
      margin-top: 2px;
      float: left;
      display: block;
      margin-right: 10px;
      width: 8px;
      height: 26px;
      background: #e6e6e6;
      border-radius: 4px;
    }
  }
  .topbd {
    padding-top: 20px;
  }
  .topbdfont {
    height: 32px;
    line-height: 32px;
    float: left;
    width: 100px;
  }

  .mainbox {
    padding: 20px;
    margin: 0px 20px;
    background: #ffffff;
    border-radius: 4px;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  }
}
.filter_container {
  background: #fff;
  margin-bottom: 16px;
  border-radius: 4px;
  overflow: hidden;
  .filter_box {
    padding: 16px 24px;
  }
}
.content-box {
  background: #fff;
  flex: 1;
  overflow: hidden;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  .el-table-box {
    flex: 1;
    overflow: hidden;
    padding: 16px 24px;
  }
}
.formBox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  .topsearch {
    flex: 1;
  }
  .rightBox {
    text-align: right;
  }
}
.mobile {
  .app-main {
    .w-200 {
      width: 100%;
    }
    .app-container {
      .filter-container {
        .filter-item {
          margin-left: 0;
          &.el-date-editor.el-range-editor.el-input__inner.el-date-editor--datetimerange {
            width: auto;
          }
        }
      }
    }
  }

  .el-dialog {
    width: 100% !important;
    margin-top: 0 !important;
  }
}
.box-card {
  background: #fff;
  position: relative;
  border-radius: 4px;
}
.notification-box {
  height: 1050px;
  overflow-y: auto;
  padding: 0 16px;
  .notification-item {
    cursor: pointer;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    .notification-des {
      margin-top: 16px;
      margin-bottom: 4px;
      font-size: 16px;
      color: rgba(0, 0, 0, 0.85);
      line-height: 24px;
    }
    span {
      font-size: 14px;
      color: rgba(0, 0, 0, 0.45);
      line-height: 22px;
    }
  }
}
.mt16 {
  margin-top: 16px;
}
.pb16 {
  padding-bottom: 16px;
}
/*---滚动条默认显示样式--*/
::-webkit-scrollbar-thumb {
  background-color: #ccc;
  height: 30px;
  outline-offset: -2px;
  outline: 0px solid #dfdfdf;
  border-radius: 4px;
  border: 0px solid #dfdfdf;
  border-radius: 4px;
}

/*---鼠标点击滚动条显示样式--*/
::-webkit-scrollbar-thumb:hover {
  background-color: #ccc;
  height: 30px;
  border-radius: 4px;
}

/*---滚动条大小--*/
::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

/*---滚动框背景样式--*/
::-webkit-scrollbar-track-piece {
  background-color: #eee;
  border-radius: 0;
}
