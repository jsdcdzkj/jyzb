<template>
  <el-dialog
    :close-on-click-modal="false"
    :visible.sync="dialogFormVisible"
    @close="close"
    width="540px"
  >
        <span slot="title" class="drawer-title">
            <b>{{ formInline.id?'编辑':'新增' }}</b>
        </span>
    <div style="padding: 0 20px">
      <el-form ref="formInline" :rules="rules" :model="formInline" label-width="80px">
        <el-form-item label="名称" prop="assets_type_name">
          <el-input v-model="formInline.assets_type_name" placeholder="请输入名称"></el-input>
        </el-form-item>
        <el-form-item label="编码" prop="assets_type_code">
          <el-input v-model="formInline.assets_type_code" placeholder="请输入编码"></el-input>
        </el-form-item>
        <el-form-item label="计量单位" prop="measurement_unit">
          <el-input v-model="formInline.measurement_unit" placeholder="请输入计量单位"></el-input>
        </el-form-item>
        <el-form-item label="保质日期" prop="shelf_life">
          <el-input-number v-model="formInline.shelf_life" placeholder="请输入保质日期"></el-input-number>
        </el-form-item>
        <el-form-item label="上级分类" prop="parent_id">
          <el-select v-model="formInline.parent_id" placeholder="请选择" clearable>
            <el-option v-for="el,index in selectList" :key="index" :label="el.title" :value="el.id"></el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="应急统计" prop="is_statistics">
          <el-select v-model="formInline.is_statistics" placeholder="请选择" clearable>
            <el-option key="0" label="否" :value="0">否</el-option>
            <el-option key="1" label="是" :value="1">是</el-option>
          </el-select>
        </el-form-item>
        <el-form-item label="简介" prop="remarks">
          <el-input type="textarea" v-model="formInline.remarks" :rows="4" resize="none" placeholder="请输入..."></el-input>
        </el-form-item>
      </el-form>
    </div>
    <div slot="footer" class="dialog-footer">
      <el-button @click="close">取消</el-button>
      <el-button type="primary" :loading="loading" @click="save('formInline')">
        保存
      </el-button>
    </div>
  </el-dialog>
</template>

<script>
import {addEquipment,editEquipment} from '@/api/system'
export default {
  name: "add",
  props:{
    selectList:{
      type:Array,
      default:[]
    },
    select:{
      type:Number|String,
      default:''
    }
  },
  data() {
    return {
      loading: false,
      dialogFormVisible: false,
      formInline: {
        assets_type_name:'',
        assets_type_code:'',
        measurement_unit:'',
        shelf_life:'',
        parent_id:'',
        remarks:'',
        is_statistics:'',
        level:''
      },
      rules: {
        assets_type_name: [{ required: true, message: "请输入名称", trigger: "blur" }],
        assets_type_code: [{ required: true, message: "请输入编码", trigger: "blur" }],
        parent_id:[{ required: true, message: "请选择上级分类", trigger: "blur" }]
      }
    };
  },
  methods: {
    showEdit(row) {
      if (row.id) {
        this.formInline = {
          id:row.id,
          parent_id:row.parent_id,
          assets_type_name:row.title,
          assets_type_code:row.code,
          measurement_unit:row.measurement_unit,
          shelf_life:row.shelf_life,
          remarks:row.remarks,
          is_statistics:row.is_statistics,
          level:row.level
        }
      } else {
        this.formInline = this.$options.data().formInline;
        this.formInline.level = row.level;
        this.formInline.parent_id = this.select;
      }
      this.loading = false;
      this.dialogFormVisible = true;
      this.$nextTick(()=>{
        this.$refs.formInline.clearValidate();
      })
    },
    close() {
      this.dialogFormVisible = false;
    },
    save(formName) {
      this.$refs[formName].validate((valid) => {
        if (valid) {
          this.loading = true;
          if(this.formInline.id){
            editEquipment(this.formInline).then(()=>{
              this.$message.success('操作成功');
              this.close();
              this.$emit("fetch-data");
            }).catch(() => {
              this.loading = false;
            });
          }else{
            addEquipment(this.formInline).then(()=>{
              this.$message.success('操作成功');
              this.close();
              this.$emit("fetch-data");
            }).catch(() => {
              this.loading = false;
            });
          }
        }
      });
    }
  }
};
</script>
